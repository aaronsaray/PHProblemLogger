{
  "name": "aaronsaray/phproblemlogger",
  "description": "PHP Problem Logger: Exception and Error Logging with full runtime information.",
  "homepage": "https://github.com/aaronsaray/PHProblemLogger",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Aaron Saray",
      "email": "aaron@aaronsaray.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "AaronSaray\\PHProblemLogger\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AaronSaray\\PHProblemLogger\\Tests\\": "tests"
    }
  },
  "require": {
    "php":  ">=5.5.0",
    "psr/log": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "satooshi/php-coveralls": "~1.0"
  },
  "scripts": {
    "tests": "phpunit --coverage-text"
  }
}
